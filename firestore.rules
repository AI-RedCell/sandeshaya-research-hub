service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is the specific admin
    // Replace 'YOUR_ADMIN_UID_HERE' with your actual UID from Firebase Console
    function isAdmin() {
      return request.auth.uid == 'yyhpZQrU3Dbgy0nMTq1cR1K8F3i1';
    }

    match /users/{userId} {
      // Admin can read/write all users. Users can only read/write their own.
      allow read: if isAdmin() || request.auth.uid == userId;
      allow write: if isAdmin() || request.auth.uid == userId;
    }
    
    match /responses/{document=**} {
      // ONLY Admin can delete, read, or update all responses
      allow read, delete, update: if isAdmin();
      
      // Anyone logged in can create (submit) a survey
      allow create: if request.auth != null;
    }

    match /metadata/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}