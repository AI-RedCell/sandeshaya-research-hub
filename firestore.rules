rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Allow read for OWN user or ADMINS
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow write: if request.auth != null && (request.auth.uid == userId || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }

    // Admins collection: explicit check
    match /admins/{userId} {
      allow read: if request.auth != null; // Needed for the 'exists' check and dashboard login check
      allow write: if false; // Only manageable via Console for now
    }
    
    // Responses: Allow read/delete for all authenticated users (Dashboard Admin)
    match /responses/{document=**} {
      allow read, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      // Detailed: Allow create only if auth matches docId and doesn't exist
      // Detailed: Allow create only if auth matches docId
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /metadata/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
